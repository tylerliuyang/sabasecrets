// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Directory {
  name                      String       @id @unique
  registrationId            Int
  identityKey               String
  signedPreKey              SignedPreKey @relation(fields: [signedPreKeyDirectoryName], references: [directoryName])
  signedPreKeyDirectoryName String       @unique

  oneTimePreKeys PublicPreKey[]
  sideChannel    SideChannel[]  @relation(name: "sender")
  SideChannels   SideChannel[]  @relation(name: "reciever")
}

model SignedPreKey {
  directoryName String     @id @unique
  keyId         Int
  publicKey     String
  signature     String
  Directory     Directory?
}

model PublicPreKey {
  id            Int       @id @default(autoincrement())
  keyId         Int
  publicKey     String
  Directory     Directory @relation(fields: [directoryName], references: [name])
  directoryName String
}

model SideChannel {
  id                Int       @id @default(autoincrement())
  senderDirectory   Directory @relation(fields: [reciever], references: [name], name: "sender")
  recieverDirectory Directory @relation(fields: [sender], references: [name], name: "reciever")
  sender            String
  reciever          String
  Message           Message[]
}

model Message {
  id            Int         @id @default(autoincrement())
  reciever      SideChannel @relation(fields: [sideChannelId], references: [id])
  senderName    String
  directoryName String
  sideChannelId Int
}
